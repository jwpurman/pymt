<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>ACH Payment Entry</masterLabel>
    <description>Form for entering ACH/eCheck bank account payment information</description>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="showAmount" type="Boolean" label="Show Amount Field" default="false"/>
            <property name="allowSaveMethod" type="Boolean" label="Allow Save Payment Method" default="true"/>
            <property name="hideCancel" type="Boolean" label="Hide Cancel Button" default="false"/>
            <property name="submitLabel" type="String" label="Submit Button Label" default="Submit Payment"/>
            <objects>
                <object>Account</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="showAmount" type="Boolean" label="Show Amount Field" default="true"/>
            <property name="allowSaveMethod" type="Boolean" label="Allow Save Payment Method" default="true"/>
            <property name="hideCancel" type="Boolean" label="Hide Cancel Button" default="false"/>
            <property name="submitLabel" type="String" label="Submit Button Label" default="Submit Payment"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
